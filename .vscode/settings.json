{
    "editor.lineHeight": 30,
    "editor.fontFamily": "'Fira Code','JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 16,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontSize": 18,
    "gitlens.graph.scrollRowPadding": 5,
    "editor.scrollbar.scrollByPage": true,
    "editor.scrollbar.verticalScrollbarSize": 14,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "workbench.colorCustomizations": {
        "activityBar.background": "#511E12",
        "titleBar.activeBackground": "#71291A",
        "titleBar.activeForeground": "#FDF9F8"
    },
}