{
    "$schema": "vscode://schemas/color-theme",
    "name": "pavao-discreto-light",
    "type": "light",
    "colors": {
        // Cores base (usando tons claros derivados da paleta escura)
        "editor.background": "#F5F7F9",      // Versão muito clara do #1D303B
        "editor.foreground": "#2D3845",       // Versão mais clara do #1D303B
        "activityBar.background": "#D7E0E5",  // Versão clara do #1D303B
        "sideBar.background": "#E8EEF2",      // Versão muito clara do #1D303B
        "statusBar.background": "#D0DBE2",    // Versão clara do #294353
        "statusBar.foreground": "#2D3845",    // Texto mais escuro para contraste
        "statusBar.border": "#C8D5DE",        // Borda derivada do tom principal
        
        // Cores de destaque adaptadas
        "activityBarBadge.background": "#6D94A6", // Versão clara do #1D303B
        "activityBarBadge.foreground": "#F5F7F9",
        "activityBar.activeBorder": "#6D94A6", 
        "activityBar.foreground": "#2D3845",
        "activityBar.inactiveForeground": "#2D384580",
        "activityBar.activeBackground": "#C3D0D8",
        "activityBar.border": "#D7E0E5",
        
        // Seleção e highlight
        "editor.selectionBackground": "#C3D0D8",
        "editor.selectionHighlightBackground": "#D0DBE2",
        "editor.lineHighlightBackground": "#E8EEF2",
        "editor.lineHighlightBorder": "#E8EEF2",
        
        // Tabs e painéis
        "tab.activeBackground": "#C3D0D880",
        "tab.activeForeground": "#2D3845",
        "tab.inactiveBackground": "#E8EEF2",
        "tab.inactiveForeground": "#2D384580",
        "tab.activeBorder": "#6D94A6",
        "tab.hoverBackground": "#D0DBE2",
        "editorGroupHeader.tabsBackground": "#E8EEF2",
        "editorGroupHeader.tabsBorder": "#E8EEF2",
        
        // Sidebar e menus
        "sideBar.foreground": "#2D3845",
        "sideBarTitle.foreground": "#2D3845",
        "sideBarSectionHeader.background": "#D7E0E5",
        "sideBarSectionHeader.foreground": "#2D3845",
        "sideBar.border": "#D0DBE2",
        
        // Input e widgets
        "input.background": "#EDF2F5",
        "input.foreground": "#2D3845",
        "input.border": "#D0DBE2",
        "editorWidget.background": "#E8EEF2",
        "editorHoverWidget.background": "#E8EEF2",
        "editorHoverWidget.border": "#D0DBE2",
        "editorSuggestWidget.background": "#E8EEF2",
        "editorSuggestWidget.border": "#D0DBE2",
        "editorSuggestWidget.selectedBackground": "#D0DBE2",
        
        // Scrollbar
        "scrollbarSlider.background": "#C8D5DE80",
        "scrollbarSlider.hoverBackground": "#B8C8D380",
        "scrollbarSlider.activeBackground": "#A8BCC880",
        
        // Lista e seleção
        "list.activeSelectionBackground": "#D0DBE2",
        "list.activeSelectionForeground": "#2D3845",
        "list.hoverBackground": "#D7E0E580",
        "list.hoverForeground": "#2D3845",
        "list.inactiveSelectionBackground": "#D7E0E5",
        "list.inactiveSelectionForeground": "#2D3845",
        
        // Terminal
        "terminal.background": "#E8EEF2",
        "terminal.foreground": "#2D3845",
        "terminalCursor.foreground": "#6D94A6",
        
        // TitleBar (parte explícita da demanda)
        "titleBar.activeBackground": "#D0DBE2", // Versão clara do #294353
        "titleBar.activeForeground": "#2D3845", // Versão escura do #FAFBFC para contraste
        "titleBar.inactiveBackground": "#D7E0E5",
        "titleBar.inactiveForeground": "#2D384580",
        "titleBar.border": "#C8D5DE",
        
        // Botões e elementos de interface
        "button.background": "#6D94A6",
        "button.foreground": "#F5F7F9",
        "button.hoverBackground": "#5D8496",
        "button.secondaryBackground": "#D0DBE2",
        "button.secondaryForeground": "#2D3845",
        
        // Outros elementos UI
        "panel.background": "#E8EEF2",
        "panel.border": "#D0DBE2",
        "panelTitle.activeForeground": "#2D3845",
        "panelTitle.inactiveForeground": "#2D384580",
        "badge.background": "#6D94A6",
        "badge.foreground": "#F5F7F9",
        "breadcrumb.background": "#E8EEF2",
        "breadcrumb.foreground": "#2D384580",
        "breadcrumb.focusForeground": "#2D3845",
        "menu.background": "#E8EEF2",
        "menu.foreground": "#2D3845",
        "menu.selectionBackground": "#D0DBE2",
        "menu.selectionForeground": "#2D3845",
        "menubar.selectionBackground": "#D0DBE2",
        "menubar.selectionForeground": "#2D3845",
        "dropdown.background": "#E8EEF2",
        "dropdown.foreground": "#2D3845",
        "dropdown.border": "#D0DBE2"
    },
    "tokenColors": [
        // Keywords e controle de fluxo
        {
            "scope": ["keyword", "keyword.control", "storage.type"],
            "settings": {
                "foreground": "#8D5A2F", // Marrom mais suave e pastél
                "fontStyle": "italic"
            }
        },
        // Strings e textos
        {
            "scope": ["string", "string.quoted"],
            "settings": {
                "foreground": "#35825A", // Verde mais suave e pastél
                "fontStyle": ""
            }
        },
        // Aspas simples e duplas em negrito
        {
            "scope": [
                "punctuation.definition.string.begin",
                "punctuation.definition.string.end"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        // Pontos em negrito
        {
            "scope": [
                "punctuation.accessor",
                "meta.delimiter.property.period"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        // Comentários de linha com dupla barra em negrito e itálico
        {
            "scope": ["comment.line.double-slash"],
            "settings": {
                "foreground": "#7D8590", // Cinza mais suave (mesma cor dos outros comentários)
                "fontStyle": "bold italic"
            }
        },
        // Variáveis e propriedades
        {
            "scope": ["variable", "variable.other"],
            "settings": {
                "foreground": "#3A6A93", // Azul mais suave e pastél
                "fontStyle": ""
            }
        },
        // Funções
        {
            "scope": ["entity.name.function", "support.function"],
            "settings": {
                "foreground": "#725BA0", // Roxo mais suave e pastél
                "fontStyle": "bold"
            }
        },
        // Classes e tipos
        {
            "scope": ["entity.name.type", "support.class"],
            "settings": {
                "foreground": "#85578D", // Roxo mais suave e pastél
                "fontStyle": "bold"
            }
        },
        // Comentários
        {
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {
                "foreground": "#7D8590", // Cinza mais suave
                "fontStyle": "italic"
            }
        },
        // Números
        {
            "scope": ["constant.numeric"],
            "settings": {
                "foreground": "#8E6845" // Marrom mais pastél
            }
        },
        // Operadores
        {
            "scope": ["keyword.operator"],
            "settings": {
                "foreground": "#5D7F99", // Azul-cinza mais suave
                "fontStyle": "bold"
            }
        }
    ]
}