{
    "$schema": "vscode://schemas/color-theme",
    "name": "pavao-discreto-light",
    "type": "light",
    "colors": {
        // Cores base (usando tons pastéis suaves)
        "editor.background": "#F7F8FA",      // Ligeiramente mais quente e menos branco
        "editor.foreground": "#323842",       // Um pouco mais suave que o preto quase puro
        "activityBar.background": "#E5E9ED",  // Tom mais pastél e harmônico
        "sideBar.background": "#EEF1F5",     // Mais suave e agradável
        "statusBar.background": "#E4E7EB",    // Melhor contraste no rodapé
        "statusBar.foreground": "#3E4A5A",    // Texto mais contrastante no rodapé
        "statusBar.border": "#D0D5DC",        // Borda mais definida
        
        // Cores de destaque adaptadas
        "activityBarBadge.background": "#7FA34699", // Menos saturado
        "activityBarBadge.foreground": "#EDF1F5",
        "activityBar.activeBorder": "#7FA34699", // Menos saturado
        "activityBar.foreground": "#3D4453",
        "activityBar.inactiveForeground": "#3D445380",
        
        // Seleção e highlight
        "editor.selectionBackground": "#D8DEE4",
        "editor.selectionHighlightBackground": "#DEE2E6",
        "editor.lineHighlightBackground": "#E5E9ED",
        "editor.lineHighlightBorder": "#E5E9ED",
        
        // Tabs e painéis
        "tab.activeBackground": "#DEE2E680",
        "tab.activeForeground": "#3D4453",
        "tab.inactiveBackground": "#EDF0F4",
        "tab.inactiveForeground": "#3D445380",
        "tab.activeBorder": "#7FA34699", // Menos saturado
        
        // Sidebar e menus
        "sideBar.foreground": "#3D4453",
        "sideBarTitle.foreground": "#3D4453",
        "sideBarSectionHeader.background": "#E5E9ED",
        "sideBarSectionHeader.foreground": "#3D4453",
        
        // Input e widgets
        "input.background": "#E5E9ED",
        "input.foreground": "#3D4453",
        "editorWidget.background": "#EEF1F5",
        "editorHoverWidget.background": "#EEF1F5",
        "editorSuggestWidget.background": "#EEF1F5",
        
        // Scrollbar
        "scrollbarSlider.background": "#D0D5DC80",
        "scrollbarSlider.hoverBackground": "#C5CCD680",
        "scrollbarSlider.activeBackground": "#B8C0CA80",
        
        // Lista e seleção
        "list.activeSelectionBackground": "#E5E9ED",
        "list.activeSelectionForeground": "#3D4453",
        "list.hoverBackground": "#E5E9ED80",
        "list.hoverForeground": "#3D4453",
        
        // Terminal
        "terminal.background": "#EEF1F5",
        "terminal.foreground": "#323842",
        "terminalCursor.foreground": "#7FA34699",
        
        // Melhorar contraste de texto
        "editorLineNumber.foreground": "#828A95", // Números de linha mais visíveis
        "titleBar.activeBackground": "#E5E9ED",
        "titleBar.activeForeground": "#3D4453",
        
        // Painel e terminal
        "panel.background": "#EEF1F5"
    },
    "tokenColors": [
        // Keywords e controle de fluxo
        {
            "scope": ["keyword", "keyword.control", "storage.type"],
            "settings": {
                "foreground": "#8D5A2F", // Marrom mais suave e pastél
                "fontStyle": "italic"
            }
        },
        // Strings e textos
        {
            "scope": ["string", "string.quoted"],
            "settings": {
                "foreground": "#35825A", // Verde mais suave e pastél
                "fontStyle": ""
            }
        },
        // Aspas simples e duplas em negrito
        {
            "scope": [
                "punctuation.definition.string.begin",
                "punctuation.definition.string.end"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        // Pontos em negrito
        {
            "scope": [
                "punctuation.accessor",
                "meta.delimiter.property.period"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        // Comentários de linha com dupla barra em negrito e itálico
        {
            "scope": ["comment.line.double-slash"],
            "settings": {
                "foreground": "#7D8590", // Cinza mais suave (mesma cor dos outros comentários)
                "fontStyle": "bold italic"
            }
        },
        // Variáveis e propriedades
        {
            "scope": ["variable", "variable.other"],
            "settings": {
                "foreground": "#3A6A93", // Azul mais suave e pastél
                "fontStyle": ""
            }
        },
        // Funções
        {
            "scope": ["entity.name.function", "support.function"],
            "settings": {
                "foreground": "#725BA0", // Roxo mais suave e pastél
                "fontStyle": "bold"
            }
        },
        // Classes e tipos
        {
            "scope": ["entity.name.type", "support.class"],
            "settings": {
                "foreground": "#85578D", // Roxo mais suave e pastél
                "fontStyle": "bold"
            }
        },
        // Comentários
        {
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {
                "foreground": "#7D8590", // Cinza mais suave
                "fontStyle": "italic"
            }
        },
        // Números
        {
            "scope": ["constant.numeric"],
            "settings": {
                "foreground": "#8E6845" // Marrom mais pastél
            }
        },
        // Operadores
        {
            "scope": ["keyword.operator"],
            "settings": {
                "foreground": "#5D7F99", // Azul-cinza mais suave
                "fontStyle": "bold"
            }
        }
    ]
}